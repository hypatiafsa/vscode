{
  "type": "module",
  "name": "hypatia",
  "displayName": "Hypatia",
  "description": "Hypatia language support for VSCode",
  "author": "hypatiadevteam",
  "publisher": "hypatiafsa",
  "version": "0.0.3",
  "homepage": "https://hypatiafsa.github.io/",
  "repository": {
    "type": "git",
    "url": "https://github.com/hypatiafsa/vscode"
  },
  "bugs": {
    "url": "https://github.com/hypatiafsa/vscode/issues"
  },
  "license": "NCSA",
  "icon": "images/hypatia.png",
  "categories": [
    "Programming Languages"
  ],
  "engines": {
    "vscode": "^1.100.0"
  },
  "main": "./extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "languages": [
      {
        "id": "hypatia",
        "aliases": [
          "Hypatia"
        ],
        "extensions": [
          ".hyp",
          ".hypatia"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "hypatia",
        "scopeName": "source.hypatia",
        "path": "./syntaxes/hypatia.json"
      }
    ],
    "themes": [
      {
        "label": "Hypatia Light",
        "uiTheme": "vs",
        "path": "./themes/hypatia-light.json"
      },
      {
        "label": "Hypatia Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/hypatia-dark.json"
      }
    ],
    "configurationDefaults": {
      "[hypatia]": {
        "editor.indentSize": "tabSize",
        "editor.insertSpaces": true,
        "editor.tabSize": 2
      }
    },
    "commands": [
      {
        "command": "hypatia.hls.server",
        "title": "Turn on/off HLS"
      },
      {
        "command": "hypatia.hls.restart",
        "title": "Restart HLS"
      },
      {
        "command": "hypatia.hls.validate",
        "title": "Validate current editor"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "hypatia.hls.server"
        },
        {
          "command": "hypatia.hls.restart",
          "when": "editorLangId == hypatia"
        },
        {
          "command": "hypatia.hls.validate",
          "when": "editorLangId == hypatia"
        }
      ]
    },
    "keybindings": [
      {
        "command": "hypatia.hls.restart",
        "key": "ctrl+k ctrl+enter",
        "when": "editorTextFocus && editorLangId == hypatia"
      },
      {
        "command": "hypatia.hls.validate",
        "key": "ctrl+k ctrl+v",
        "when": "editorTextFocus && editorLangId == hypatia"
      }
    ],
    "configuration": {
      "title": "Hypatia",
      "properties": {
        "hypatia.hls.enabled": {
          "type": "boolean",
          "scope": "window",
          "default": true,
          "description": "HLS: Enable Hypatia Language Server."
        },
        "hypatia.hls.path": {
          "type": "string",
          "scope": "window",
          "default": "",
          "description": "HLS: Path to the HLS executable."
        },
        "hypatia.hls.args": {
          "type": "array",
          "items": { "type": "string" },
          "scope": "window",
          "default": [],
          "description": "HLS: Arguments passed to the HLS executable."
        },
        "hypatia.hls.trace": {
          "type": "string",
          "scope": "window",
          "default": "off",
          "enum": ["off", "messages", "verbose"],
          "description": "HLS: Trace LSP client/server messages to the HLS output channel."
        },
        "hypatia.hls.shutdowndelay": {
          "type": "number",
          "scope": "window",
          "default": 5000,
          "description": "HLS: How long (ms) to keep the HLS running after the last Hypatia editor is closed."
        },
        "hypatia.style.autotheme": {
          "type": "boolean",
          "scope": "window",
          "default": false,
          "description": "Style: Automatically switch the whole VSCode colour theme to the selected variant while a Hypatia editor is active, and restore the previous theme when leaving."
        },
        "hypatia.style.autotokens": {
          "type": "boolean",
          "scope": "window",
          "default": true,
          "description": "Style: Automatically apply Hypatia token colours, based on the selected theme variant, only while a Hypatia editor is active, and restore the previous token customisations when leaving."
        },
        "hypatia.style.variant": {
          "type": "string",
          "scope": "window",
          "default": "auto",
          "enum": [ "light", "dark", "auto" ],
          "enumDescriptions": [
            "Use the Hypatia Light theme.",
            "Use the Hypatia Dark theme.",
            "Follow the current VSCode theme kind (light/dark) to determine the Hypatia variant."
          ],
          "description": "Style: When autotheme or autotokens are enabled, defines which Hypatia theme variant (light/dark) to apply; 'auto' means to follow the current VSCode theme."
        },
        "hypatia.style.semantichighlighting": {
          "type": "string",
          "scope": "window",
          "default": "inherit",
          "enum": [ "on", "off", "inherit" ],
          "enumDescriptions": [
            "Force semantic highlighting on while a Hypatia editor is active.",
            "Force semantic highlighting off while a Hypatia editor is active.",
            "Do not override VSCode semantic highlighting setting."
          ],
          "description": "Style: Controls whether semantic highlighting is forced on/off while a Hypatia editor is active; 'inherit' leaves the user's setting unchanged."
        },
        "hypatia.style.trace": {
          "type": "boolean",
          "scope": "window",
          "default": false,
          "description": "Style: Write debug information about style automation (theme/tokens/highlighting) to the 'Hypatia Style' output channel."
        }
      }
    }
  }
}
