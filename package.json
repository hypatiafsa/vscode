{
  "type": "module",
  "name": "hypatia",
  "displayName": "Hypatia",
  "description": "Hypatia language support for VSCode",
  "author": "hypatiadevteam",
  "publisher": "hypatiafsa",
  "version": "0.0.2",
  "homepage": "https://hypatiafsa.github.io/",
  "repository": {
    "type": "git",
    "url": "https://github.com/hypatiafsa/vscode"
  },
  "bugs": {
    "url": "https://github.com/hypatiafsa/vscode/issues"
  },
  "license": "NCSA",
  "icon": "images/hypatia.png",
  "categories": [
    "Programming Languages"
  ],
  "engines": {
    "vscode": "^1.100.0"
  },
  "main": "./extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "languages": [
      {
        "id": "hypatia",
        "aliases": [
          "Hypatia"
        ],
        "extensions": [
          ".hyp",
          ".hypatia"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "hypatia",
        "scopeName": "source.hypatia",
        "path": "./syntaxes/hypatia.json"
      }
    ],
    "themes": [
      {
        "label": "Hypatia Light",
        "uiTheme": "vs",
        "path": "./themes/hypatia-light.json"
      },
      {
        "label": "Hypatia Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/hypatia-dark.json"
      }
    ],
    "configurationDefaults": {
      "[hypatia]": {
        "editor.indentSize": "tabSize",
        "editor.insertSpaces": true,
        "editor.tabSize": 2
      }
    },
    "configuration": {
      "title": "Hypatia",
      "properties": {
        "hypatia.style.autotheme": {
          "type": "boolean",
          "scope": "window",
          "default": false,
          "description": "Style: Automatically switch the whole VSCode colour theme while a Hypatia editor is active, and restore the previous theme when leaving."
        },
        "hypatia.style.autotokens": {
          "type": "string",
          "scope": "window",
          "default": "auto",
          "enum": [ "off", "auto", "dark", "light" ],
          "description": "Style: Automatically apply Hypatia token colours only while a Hypatia editor is active, and restore the previous token customisations when leaving; 'auto' follows the current VSCode theme kind (light/dark)."
        },
        "hypatia.style.semantichighlighting": {
          "type": "string",
          "scope": "window",
          "default": "inherit",
          "enum": [ "on", "off", "inherit" ],
          "description": "Style: Override the semantic highlighting flag while a Hypatia editor is active; 'inherit' leaves the user's setting unchanged."
        },
        "hypatia.style.trace": {
          "type": "boolean",
          "scope": "window",
          "default": false,
          "description": "Style: Write debug information about style automation (theme/tokens/highlighting) to the Style output channel."
        }
      }
    }
  }
}
