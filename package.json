{
  "name": "hypatia",
  "displayName": "Hypatia",
  "description": "Hypatia language support for VSCode",
  "author": "hypatiadevteam",
  "publisher": "hypatiafsa",
  "version": "0.0.0",
  "homepage": "https://hypatiafsa.github.io/",
  "repository": {
    "type": "git",
    "url": "https://github.com/hypatiafsa/vscode"
  },
  "bugs": {
    "url": "https://github.com/hypatiafsa/vscode/issues"
  },
  "license": "NCSA",
  "icon": "images/hypatia.png",
  "categories": [
    "Programming Languages"
  ],
  "engines": {
    "vscode": "^1.75.0"
  },
  "main": "./extension.js",
  "activationEvents": ["onLanguage:hypatia", "onStartupFinished"],
  "contributes": {
    "languages": [
      {
        "id": "hypatia",
        "aliases": [
          "Hypatia"
        ],
        "extensions": [
          ".hyp",
          ".hypatia"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "hypatia",
        "scopeName": "source.hypatia",
        "path": "./syntaxes/hypatia.json"
      }
    ],
    "themes": [
      {
        "label": "hypatia",
        "uiTheme": "vs-dark",
        "path": "./themes/hypatia.json"
      }
    ],
    "configurationDefaults": {
      "[hypatia]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true
      }
    },
    "configuration": {
      "title": "Hypatia",
      "properties": {
        "hypatia.autotheme.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Automatically switch to the Hypatia colour theme when a Hypatia editor is active, and restore the previous theme when leaving."
        }
      }
    }
  }
}
